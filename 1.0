#Импорт модуля математических функций, нам нужен для извлечения корня
import math
#Создаём функцию
def new():
#Запрашиваем данные у пользователя для решения
 print("\nВведите коэффициенты для уравнения:") 
 a = float(input("a = ")) 
 b = float(input("b = ")) 
 c = float(input("c = ")) 
#Высчитываем дискриминант
 D = b ** 2 - 4 * a * c 
#Сравниваем результат дискриминанта с полученными условиями и получаем корни.
 if D > 0: 
    x1 = (-b + math.sqrt(D)) / (2 * a) 
    x2 = (-b - math.sqrt(D)) / (2 * a) 
    print("x1 = %.2f \nx2 = %.2f" % (x1, x2))
 elif D == 0: 
    x = -b / (2 * a) 
    print("x = %.2f" % x)
 else: 
    print("Корней нет")
 return new()
#Запускаем скрипт
new()
